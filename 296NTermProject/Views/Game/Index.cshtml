@model List<_296NTermProject.Models.Game>
@{
    ViewData["Title"] = "Game List";
}

@foreach (var g in Model)
{
    @:Title: @g.Title <br />
    @:Published: @g.Date.ToString("yyyy") <br />
    foreach (var a in g.Developers)
    {
        @:Developer: @a.CompanyName <br />
    }
    <a asp-action="Edit" asp-route-id="@g.GameID" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@g.GameID" class="btn btn-danger">Delete</a>
    <br />

}
<a asp-action="Add"class="btn-default">Add Game</a>



